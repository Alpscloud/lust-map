// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+min-screen(768px)
	.data-section
	
		.columns
			display flex
			align-items flex-start
			justify-content space-between
			flex-wrap nowrap
			flex-direction row-reverse
			margin-left -15px
			margin-right -15px
			
		.col
			flex 1
			padding-left 15px
			padding-right 15px
			&.map-col
				width 55%
				.scale-visual
					width auto
					height 288px
					max-height 60%
	
			&.data-col
				width 45%
				max-width 516px
				position relative
				overflow visible
		
		.intro-contain
			margin-bottom 55px
			display flex 
			flex-direction row
			align-items center
			flex-wrap wrap
			
		.map-col
			position sticky
			top 0
			left 0
			
			> .languages
				display none
				




	.mobile-hide
		display block !important

	.mobile-show
		display none !important
		

+max-screen(767px)
	.site-width
		padding-left 25px
		padding-right 25px
		
+max-screen(575px)
	.ano-footer
		padding-top 12px
		padding-bottom 60px
		border-width 6px
		
		&__item
			width 100%
			
		&__title
			position relative
			font-size 14px
			padding 0 22px 10px 15px
			margin-left -15px
			margin-right -15px
			border-bottom 1px solid #4e4e4e
			&-icons
				display block
				
		&-menu
			display none
	