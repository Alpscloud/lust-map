.country-info
	position absolute
	top 0
	right 100%
	width 100%
	padding 50px 40px
	background-color $light-grey-bg
	overflow-y auto
	overflow-x hidden
	transition all 0.3s ease
	z-index 15
	
	&-text
		font 16px $FuturaMed
		line-height 1.4
		color #212529
			
	&.active
		right 0
	

	.title-row
		display flex
		flex-direction row
		justify-content space-between
		align-items flex-start
		align-content flex-start
		flex-wrap nowrap
	

	.country-close-trigger
		position relative
		display block
		width 39px
		height 39px
		margin-left 25px
		background $basic-black-color url('../img/icon-close.svg') center center no-repeat
		cursor pointer
		flex none

		&:hover
			background-color $accent-color
			
		
	

	h2
		position relative
		padding-top 4px
		font-size 44px
		line-height 1
		color #212529
		

		&:after
			content ''
			position relative
			display block
			width 73px
			height 2px
			margin 15px 0 20px
			background-color #707070
		
	


	.stats
		display flex
		flex-direction row
		justify-content flex-start
		align-items flex-start
		align-content flex-start
		flex-wrap wrap
		margin-left -7.5px
		margin-right -7.5px
		

		.stat
			margin-bottom 36px
			display block
			padding-left 7.5px
			padding-right 7.5px
			width 33.3333%
		

		.stat-label
			display block
			margin-bottom 10px
			color $alternate-text-color
			line-height 1
			font 12px $FuturaHeavy
		
			margin-bottom 10px
		

		.stat-value
			display block
			color #f83c7f
			font 26px $FuturaHeavy
			//word-break: break-all
			hyphens auto
		

		.stat-small
			display inline-block
			transform translateY(-8px)
			font-size 14px
		
	

	&.large-lang
		.stats
			.stat-value
				font-size 22px
			

			.stat-small
				font-size 12px
				transform translateY(-5px)
			
		
	


