// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+min-screen(1050px)
	.data-section
	
		.columns
			display flex
			align-items flex-start
			justify-content space-between
			flex-wrap nowrap
			flex-direction row-reverse
			margin-left -15px
			margin-right -15px
			
		.col
			flex 1
			padding-left 15px
			padding-right 15px
			&.map-col
				width 55%
				.scale-visual
					width auto
					height 355px
					max-height 60%
	
			&.data-col
				width 45%
				max-width 516px
				position relative
				overflow visible
		
		.intro-contain
			margin-bottom 55px
			display flex 
			flex-direction row
			align-items center
			flex-wrap wrap
			
		.map-col
			position sticky
			top 0
			left 0
			
			> .links-contain
				display none
				




	.mobile-hide
		display block !important

	.mobile-show
		display none !important
		

+max-screen(1050px)
	.site-width
		padding-left 25px
		padding-right 25px
	
	.data-section
		.map-col
			> .links-contain
				display flex
				align-items center
				justify-content flex-end
				
	.data-section 
		.logo-wrapper
			width 120vw
			max-width none
			margin-bottom 0
			
	.data-section 
		.data-col
			padding 20px 0 0
		.map-col 
			padding-top 0
			.mobile-show
				margin-bottom 40px
				

				
			.control-row
				padding-left 0
				
				.links-contain
					display none
				
			.internal-map-contain
				padding-right 0
				
			.scale-visual
				position relative
				transform none
				top auto
				right auto
				
	.lus-header
		margin-bottom 35px
		
	.info-overlay
		p
			font-size 16px
			

	.scroll-indicator
		bottom 10px
		
	.country-info
		padding 50px 20px
		
		.title-row 
			.country-close-trigger
				position absolute
				top 0
				right 0
	
	.data-section 
		.map-col 	
			.scale-visual
				flex-direction row
				height auto
				margin-bottom 30px
				flex-wrap nowrap
				&__line
					width auto
					height 8px
					margin 0 16px
					background linear-gradient(89.93deg, #DF4285 0%, #EDB273 67.05%)	
					

	.country-info
		padding 40px 25px 25px
		h2
			font-size 36px
			line-height 1
			

	.country-info .stats .stat
		margin-bottom 16px
		
	.country-info-text
		font-size 16px
		line-height 32px
		
	.mobile-hide
		display none !important
		
+max-screen(575px)
	.ano-footer
		padding-top 12px
		padding-bottom 60px
		border-width 6px
		
		&__item
			width 100%
			
		&__title
			position relative
			font-size 14px
			padding 0 22px 10px 15px
			margin-left -15px
			margin-right -15px
			border-bottom 1px solid #4e4e4e
			&-icons
				display block
				
		&-menu
			display none
	