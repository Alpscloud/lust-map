.info-overlay
	opacity 0
	pointer-events none
	display flex
	flex-direction row
	justify-content center
	align-items center
	align-content center
	flex-wrap nowrap
	position fixed
	top 0
	left 0
	width 100%
	height 100vh
	background-color rgba(0,0,0,.6)
	transition all 0.5s ease
	z-index 1001

	.info-bg
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		width 100%
		height 100%
	

	.overlay-content
		opacity 0
		transform translateY(50%)
		position relative
		width 90vw
		max-width 702px
		height 90vh
		max-height 775px
		padding 25px
		background-color $basic-white-color
		overflow-y auto
		overflow-x hidden
		transition all 0.3s ease .4s
		
		font-size 15px
		
		h2
			font-size 26px
			
		h3
			font-size 22px
			
		a
			color $accent-color
			text-decoration underline
	

	img
		max-width none
		width 140%
		transform translateX(-13%)
		
	a
		cursor pointer
		color inherit
		&:hover
			text-decoration underline
			color #007bff
	

.overlay-close
	position absolute
	display block
	top 20px
	right 20px
	width 39px
	height 39px
	background $basic-black-color url('../img/icon-close.svg') center center no-repeat
	z-index 10

	&:hover
		background-color $accent-color
		
	


